package in.pickright.helper;

import in.pickright.constants.UserErrorMessages;
import in.pickright.dto.UserRequest;

public class FieldValidation {

	public static boolean validate(UserRequest request) {
		if (request.getFirstName()==null || request.getFirstName().isEmpty()) {
			throw new RuntimeException(UserErrorMessages.FIRST_NAME_REQUIRED);
		}
		
		if (request.getLastName()==null) {
			throw new RuntimeException(UserErrorMessages.LAST_NAME_REQUIRED);
		}
		
		if (request.getEmail()==null) {
			throw new RuntimeException(UserErrorMessages.EMAIL_REQUIRED);
		}
		
		if (request.getFirstName()==null) {
			throw new RuntimeException(UserErrorMessages.FIRST_NAME_REQUIRED);
		}
	}
}
